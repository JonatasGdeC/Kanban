<MudDrawer Open="OpenDawer" Elevation="0" Variant="@DrawerVariant.Responsive">
  <MudDrawerHeader>
    <MudButton OnClick="ToggleDrawer">
      <MudImage Width="150" Height="26" Src="./media/logo.png" Alt="Logo"/>
    </MudButton>
  </MudDrawerHeader>
  <SelectBoard OnBoardSelected="OnBoardSelected"/>
  <CreateBoard/>
</MudDrawer>

<MudButton OnClick="ToggleDrawer" Class="btnEye">
  <MudIcon Icon="@Icons.Material.Filled.RemoveRedEye"/>
</MudButton>


@code{
  [Parameter] public EventCallback<BoardsResponse?> OnBoardSelected { get; set; }

  private bool OpenDawer = true;
  private void ToggleDrawer() => OpenDawer = !OpenDawer;
}

<style>
  .btnEye{
    position: fixed;
    bottom: 20px;
    left: 0;
    width: 56px;
    height: 48px;
    background-color: #635FC7;
    color: #FFF;
    border-radius: 0 100px 100px 0;
  }

  .btnEye:hover{
    background-color: #A8A4FF;
  }
</style>
